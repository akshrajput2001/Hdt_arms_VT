<launch>
  <arg name="publish_frequency" default="500" />

  <!-- Load default controllers -->
  <include file="$(find hdt_saffir_control)/launch/default_controllers.launch">
    <arg name="publish_frequency" value="$(arg publish_frequency)" />
  </include>

  <!-- Robot state publisher -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" value="$(arg publish_frequency)"/>
    <param name="tf_prefix" value=""/>
    <remap from="joint_states" to="/hdt_saffir/joint_states" />
  </node>

  <!-- Motion planning -->
  <!-- <include file="$(find rosbook_arm_moveit_config)/launch/move_group.launch"/> -->

</launch>
